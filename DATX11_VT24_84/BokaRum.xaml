                        <x:String>14</x:String>
                        <x:String>15</x:String>
                        <x:String>16</x:String>
                        <x:String>17</x:String>
                        <x:String>18</x:String>
                        <x:String>19</x:String>
                        <x:String>20</x:String>
                        <x:String>21</x:String>
                        <x:String>22</x:String>
                        <x:String>23</x:String>
                        <x:String>24</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </Frame>
    </StackLayout>
    <StackLayout VerticalOptions="EndAndExpand">
        <Frame CornerRadius="10" BackgroundColor="White" WidthRequest="30" HeightRequest="40">
            <Picker x:Name="EndMinutePicker" Title="Minut" SelectedIndexChanged="OnEndMinuteSelectedIndexChanged" FontSize="15">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>00</x:String>
                        <x:String>15</x:String>
                        <x:String>30</x:String>
                        <x:String>45</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </Frame>
    </StackLayout>
</StackLayout>


            
            
            
            <Frame CornerRadius="15"
                   Padding="20"
                   Margin="0,20,0,0" 
                   BackgroundColor="#80232E34"
                   WidthRequest="300"
                   HeightRequest="100">
                <ScrollView>
                    <Label x:Name="BookingInfoLabel"
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold"
                           Margin="10,10,10,0"/>
                </ScrollView>
            </Frame>

            <!-- Button for booking -->
            <Button Text="Boka rum" 
                    BackgroundColor="#00ACFF"
                    TextColor="White"
                    FontSize="20"
                    FontAttributes="Bold"
                    CornerRadius="15"
                    Margin="20,150,20,0"
                    Padding="20,20" 
                    Clicked="OnBookRoomClicked" /> <!-- Add Clicked event handler -->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
